@model NextwoIdentity.Models.ViewModels.EditRoleViewModel

@{
    ViewData["Title"] = "Edit Role";
}

<h1>EditRole</h1>

<hr />
<div class="card-header">
    <div class="col-md-4">
        <form asp-action="EditRole">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleId" class="control-label"></label>
                <input asp-for="RoleId" readonly class="form-control" />
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RoleName" class="control-label"></label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="RoleList" asp-asp-controller="Account">Back to List</a>

            </div>
        </form>
    </div>
</div>
<div class="card">

    <div class="card-header">
        User in This role
    </div>
    <div class="card-body">
        @if (Model.Users!.Any())
        {
            
       
        @foreach (var user in Model.Users!)
        {
            @user <br />
            }
        }
        else
        {
            <span class="alert alert-warning"> no User In this role </span>
        }
        
    </div>
    <div class="card-body">
        <a asp-action="ModifyUsersInRole" asp-controller="Account" asp-route-id="@Model.RoleId"> add/Remove users from this role  </a>
        </div>
        </div>
<div>
</div>

